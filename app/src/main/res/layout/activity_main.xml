<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_console"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="165dp"
        android:padding="12dp"
        android:text="@string/introduction"
        android:textColor="@color/colorAccent"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tv_main"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Start Main"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_single"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_console" />

    <Button
        android:id="@+id/tv_single"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Start Single"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_task"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main" />

    <Button
        android:id="@+id/tv_task"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Start Task"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_single" />

    <Button
        android:id="@+id/tv_create"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Start Create"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_task" />

</android.support.constraint.ConstraintLayout>